<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <com.demo.customview.RoundImageView
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:src="@mipmap/cgx" />

    <com.demo.customview.RoundImageView2
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:src="@mipmap/cgx" />

    <!--topLeftRightCorner控制是否显示上下圆角-->
    <com.demo.customview.FilletImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/slide0"
        app:filletImageRadius="10dp"
        app:topLeftRightCorner="true" />
</LinearLayout>